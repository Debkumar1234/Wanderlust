<% layout("/layouts/boilerplate") %>
<body>
  <h3 class="mb-3">All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
    <div class="card" style="color: rgba(0, 0, 0, 0.521)">
      <a href="/listings/<%= listing._id %>" class="card-cover">
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="overlay">
          <p class="card-text-msg"><%= listing.description %></p>
        </div>
      </a>
      <div class="card-body">
        <h5 class="card-title">
          <b><i><%= listing.title %></i></b>
        </h5>
        <p class="card-text">
          <b
            ><i
              >&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</i
            ></b
          >
        </p>
        <a href="/listings/<%= listing._id %>" class="btn btn-primary add-btn"
          >Show Details</a
        >
      </div>
    </div>
    <% } %>
  </div>
</body>
